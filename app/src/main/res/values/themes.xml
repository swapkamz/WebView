<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AZ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <!--&lt;!&ndash; This code is for transparent background, White background and Black icon or text on status bar&ndash;&gt;
        <item name="android:windowLightStatusBar">true</item>-->
    </style>

    <style name="Theme.AZ.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="progressBar" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="Theme.AZ.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AZ.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>